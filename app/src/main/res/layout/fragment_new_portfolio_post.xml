<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreatePortfolioPost">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawablePadding="20dp"
        android:fontFamily="@font/ubuntu"
        android:padding="17dp"
        android:text="@string/text_new_portfolio_post"
        android:textColor="@color/blackBase"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:drawableStartCompat="@drawable/arrow_back" />

    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/ubuntu"
        android:padding="18dp"
        android:text="@string/description_to_upload"
        android:textColor="@color/blackBase"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleTextView" />

    <ImageView
        android:id="@+id/portfolioImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/portfolio_cover"
        app:layout_constraintTop_toBottomOf="@id/descriptionTextView"
        app:layout_constraintBottom_toTopOf="@id/buttonsLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintDimensionRatio="H,17:9" />

    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="110dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/imagePhoto"
            style="@style/ActionButton"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginEnd="3sp"
            android:background="@drawable/button_back"
            android:fontFamily="@font/ubuntu"
            android:text="@string/gallery"
            android:textColor="@color/blackBase"
            android:textSize="16sp"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/buttonAddPhoto"
            style="@style/ActionButton"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="13dp"
            android:background="@drawable/button_back"
            android:fontFamily="@font/ubuntu"
            android:text="@string/photo"
            android:textColor="@color/blackBase"
            android:textSize="16sp"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/videoView"
            style="@style/ActionButton"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/button_back"
            android:fontFamily="@font/ubuntu"
            android:text="@string/video"
            android:textColor="@color/blackBase"
            android:textSize="16sp"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
