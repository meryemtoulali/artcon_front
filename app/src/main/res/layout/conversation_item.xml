<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="22dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="16dp"
        app:cardStrokeColor="#3C3C45"
        app:cardStrokeWidth="2dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            >

            <ImageView
                android:id="@+id/profilePictureImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_picture"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/userNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/profilePictureImageView"
                app:layout_constraintStart_toEndOf="@id/profilePictureImageView"
                app:layout_constraintHorizontal_chainStyle="packed"
                android:layout_marginStart="8dp"/>

            <TextView
                android:id="@+id/pseudoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:text="Pseudo"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/userNameTextView"
                tools:layout_editor_absoluteY="4dp" />

            <TextView
                android:id="@+id/lastMessageTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Last Message"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/userNameTextView"
                app:layout_constraintStart_toEndOf="@id/profilePictureImageView"
                app:layout_constraintEnd_toStartOf="@id/timestampTextView"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/timestampTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Timestamp"
                android:textSize="12sp"
                app:layout_constraintTop_toTopOf="@id/lastMessageTextView"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/statusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/lastMessageTextView"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
